<h2 class="page-header">Zarejestruj</h2>
	<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: 'form-horizontal'}) do |f| %>
		<%= render 'shared/error_messages' %>
	  <%= f.error_notification %>
	  
	  <%= f.input :imie, label: 'Imię' %>
	  <%= f.input :nazwisko %>
	  <%= f.input :branch_id, label: 'Oddział', collection: Branch.all %>
		<%= f.input :email %>

		<%= f.input :password, label: 'Hasło' %>
		<%= f.input :password_confirmation, label: 'Potwierdz hasło' %>
	
	  <div class="form-actions">
	  	<%= f.submit "Zarejestruj", class: 'btn btn-primary' %>
	  </div>
	<% end %>
<%= render "devise/shared/links" %>
